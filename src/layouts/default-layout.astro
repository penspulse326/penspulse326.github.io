---
import Footer from '../components/footer.astro';
import Navbar from '../components/navbar/navbar.astro';
import '../styles/all.scss';

interface Props {
  canonicalUrl?: string;
  description?: string;
  ogImage?: string;
  title?: string;
}

const {
  canonicalUrl = Astro.url.href,
  description = '分享技術研究筆記、程式挑戰計畫與開發心得，記錄前端開發與技術學習的點點滴滴',
  ogImage = '/avatar.png',
  title = "Pen's Pulse - 技術筆記與開發心得",
} = Astro.props;

const siteTitle = title.includes("Pen's Pulse") ? title : `${title} | Pen's Pulse`;

// 建立完整的 URL
const baseUrl = Astro.site?.href || Astro.url.origin;
const fullOgImageUrl = new URL(ogImage, baseUrl).href;
---

<!doctype html>
<html lang="zh-TW">
  <head>
    <meta charset="utf-8" />
    <link href="/favicon.ico" rel="icon" type="image/x-icon" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta content={Astro.generator} name="generator" />

    <!-- 資源提示：預先連接到自己的網域以加速資源載入 -->
    <link crossorigin href={baseUrl} rel="preconnect" />

    <!-- 主要 Meta 標籤 -->
    <title>{siteTitle}</title>
    <meta content={siteTitle} name="title" />
    <meta content={description} name="description" />
    <link href={canonicalUrl} rel="canonical" />

    <!-- Open Graph / Facebook -->
    <meta content="website" property="og:type" />
    <meta content={canonicalUrl} property="og:url" />
    <meta content={siteTitle} property="og:title" />
    <meta content={description} property="og:description" />
    <meta content={fullOgImageUrl} property="og:image" />
    <meta content="zh_TW" property="og:locale" />

    <!-- Twitter -->
    <meta content="summary_large_image" property="twitter:card" />
    <meta content={canonicalUrl} property="twitter:url" />
    <meta content={siteTitle} property="twitter:title" />
    <meta content={description} property="twitter:description" />
    <meta content={fullOgImageUrl} property="twitter:image" />

    <!-- Theme Initialization Script -->
    <script is:inline>
      const getStoredTheme = () => localStorage.getItem('theme');
      const getPreferredTheme = () => {
        const storedTheme = getStoredTheme();
        if (storedTheme) {
          return storedTheme;
        }
        return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
      };

      const setTheme = (theme) => {
        if (theme === 'auto' && window.matchMedia('(prefers-color-scheme: dark)').matches) {
          document.documentElement.setAttribute('data-bs-theme', 'dark');
        } else {
          document.documentElement.setAttribute('data-bs-theme', theme);
        }
      };

      setTheme(getPreferredTheme());
    </script>
  </head>
  <body>
    <Navbar />
    <main id="main-content">
      <slot />
    </main>
    <Footer />

    <script>
      // 延後載入 Bootstrap Icons CSS，避免阻塞關鍵渲染路徑
      async function loadBootstrapIcons() {
        await import('bootstrap-icons/font/bootstrap-icons.css');
      }

      // 延後載入 Bootstrap JS，避免阻塞關鍵渲染路徑
      if ('requestIdleCallback' in window) {
        requestIdleCallback(() => {
          loadBootstrapIcons();
          import('bootstrap/dist/js/bootstrap');
        });
      } else {
        // 降級方案：頁面載入完成後載入
        window.addEventListener('load', () => {
          loadBootstrapIcons();
          import('bootstrap/dist/js/bootstrap');
        });
      }
    </script>

    <style is:inline>
      /* 固定 Y 軸捲軸 */
      html {
        overflow-y: scroll;

        &::-webkit-scrollbar {
          width: 8px;
        }

        &::-webkit-scrollbar-track {
          background: transparent;
        }

        &::-webkit-scrollbar-thumb {
          background: var(--bs-primary);
          border-radius: 0;
        }

        &::-webkit-scrollbar-thumb:active {
          background: rgb(var(--bs-primary-rgb), 0.8);
        }
      }

      body {
        overflow-y: visible;
      }

      /* 主要內容區域最小高度 */
      #main-content {
        min-height: calc(100dvh - 60px - 80px);

        @media (width >= 992px) {
          min-height: calc(100dvh - 60px - 56px);
        }
      }
    </style>
  </body>
</html>
