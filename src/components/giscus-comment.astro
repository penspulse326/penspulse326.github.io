---
// Giscus 留言元件
---

<div class="giscus-wrapper"></div>

<script>
  // 動態載入 Giscus
  function loadGiscus() {
    const giscusWrapper = document.querySelector('.giscus-wrapper');

    if (!giscusWrapper) {
      return;
    }

    // 檢測主題
    const currentTheme = document.documentElement.getAttribute('data-bs-theme');
    const theme = currentTheme === 'dark' ? 'dark' : 'light';

    // 建立 Giscus script
    const script = document.createElement('script');
    script.src = 'https://giscus.app/client.js';
    script.setAttribute('data-repo', 'penspulse326/penspulse326.github.io');
    script.setAttribute('data-repo-id', 'R_kgDOH7IBDw');
    script.setAttribute('data-category', 'Announcements');
    script.setAttribute('data-category-id', 'DIC_kwDOH7IBD84CesRY');
    script.setAttribute('data-mapping', 'title');
    script.setAttribute('data-strict', '0');
    script.setAttribute('data-reactions-enabled', '1');
    script.setAttribute('data-emit-metadata', '0');
    script.setAttribute('data-input-position', 'bottom');
    script.setAttribute('data-theme', theme);
    script.setAttribute('data-lang', 'zh-Hant');
    script.setAttribute('crossorigin', 'anonymous');
    script.async = true;

    giscusWrapper.appendChild(script);
  }

  // 頁面載入時執行
  loadGiscus();

  // 監聽主題變化
  document.addEventListener('astro:page-load', () => {
    loadGiscus();
  });

  // 監聽主題切換並更新 Giscus
  const observer = new MutationObserver(() => {
    const iframe = document.querySelector<HTMLIFrameElement>('.giscus-wrapper iframe');
    if (iframe?.contentWindow) {
      const currentTheme = document.documentElement.getAttribute('data-bs-theme');
      const theme = currentTheme === 'dark' ? 'dark' : 'light';
      iframe.contentWindow.postMessage({ giscus: { setConfig: { theme } } }, 'https://giscus.app');
    }
  });

  observer.observe(document.documentElement, {
    attributes: true,
    attributeFilter: ['data-bs-theme'],
  });
</script>

<style>
  .giscus-wrapper {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--bs-border-color, #dee2e6);
  }
</style>
