---
import type { CategoryWithContent } from '../../utils/content';

import ContentNavigation from '../content-navigation.astro';
interface Props {
  activeId?: string;
  navigation: CategoryWithContent[];
}

const { activeId, navigation } = Astro.props as Props;
---

<button
  class="btn btn-link text-decoration-none p-2 mb-3 fw-semibold w-100 text-start bg-body-secondary mt-n3 rounded-0"
  id="back-to-main-menu"
  type="button"
>
  <i class="bi bi-arrow-left me-1"></i>
  回到主選單
</button>
<div class="content-drawer px-2">
  <ContentNavigation
    aAttrs={() => ({ 'data-bs-dismiss': 'offcanvas' })}
    activeId={activeId}
    id="content-drawer-accordion"
    navigation={navigation}
  />
</div>

<script define:vars={{ activeId }}>
  const offcanvasElement = document.getElementById('offcanvasNavbar');
  const mainContainer = document.getElementById('main-menu-container');
  const contentContainer = document.getElementById('content-menu-container');
  const backButton = document.getElementById('back-to-main-menu');

  if (offcanvasElement && mainContainer && contentContainer && backButton) {
    offcanvasElement.addEventListener('show.bs.offcanvas', () => {
      // 開啟時預設顯示內容選單
      contentContainer.classList.remove('d-none');
      mainContainer.classList.add('d-none');
    });

    backButton.addEventListener('click', () => {
      // 切換到主選單
      contentContainer.classList.add('d-none');
      mainContainer.classList.remove('d-none');
    });
  }
</script>

<style>
  /* 內容抽屜樣式 */
  .content-drawer {
    max-height: calc(100dvh - 200px);
    overflow-y: auto;
  }
</style>
