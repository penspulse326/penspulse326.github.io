<!-- LoadingOverlay.astro -->
<script is:inline>
  // 使用 is:inline 確保這段腳本立即執行，防止畫面閃爍
  (function () {
    if (sessionStorage.getItem('hasVisited')) {
      document.documentElement.classList.add('skip-loading');
    } else {
      sessionStorage.setItem('hasVisited', 'true');
    }
  })();
</script>

<div id="loading-overlay" class="loading-overlay">
  <div class="loader-content">
    <div class="logo-container">
      <div class="pulse-circle"></div>
      <div class="pulse-circle delay-1"></div>
    </div>
    <div class="loading-bar-container">
      <div class="loading-bar"></div>
    </div>
    <p class="loading-text">Initializing Neural Pulse</p>
  </div>
</div>

<style>
  /* 如果有 skip-loading 類別，直接隱藏遮罩 */
  :global(.skip-loading) .loading-overlay {
    display: none !important;
  }

  .loading-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #050505;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10000;
    transition:
      opacity 1.2s cubic-bezier(0.4, 0, 0.2, 1),
      visibility 1.2s;
  }

  .loading-overlay.fade-out {
    opacity: 0;
    visibility: hidden;
  }

  .loader-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .logo-container {
    position: relative;
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .pulse-circle {
    position: absolute;
    width: 100%;
    height: 100%;
    border: 2px solid #00a8a5;
    border-radius: 50%;
    opacity: 0;
    animation: pulse 2s infinite cubic-bezier(0.21, 0.53, 0.56, 1);
  }

  .pulse-circle.delay-1 {
    animation-delay: 1s;
  }

  .loading-bar-container {
    width: 200px;
    height: 2px;
    background: rgb(255 255 255 / 10%);
    border-radius: 4px;
    overflow: hidden;
    position: relative;
  }

  .loading-bar {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, #00a8a5, transparent);
    animation: loading-slide 2s infinite ease-in-out;
  }

  .loading-text {
    color: #fff;
    font-family: Outfit, Inter, system-ui, sans-serif;
    font-size: 0.75rem;
    letter-spacing: 0.4rem;
    text-transform: uppercase;
    margin: 0;
    opacity: 0.5;
    font-weight: 300;
  }

  @keyframes pulse {
    0% {
      transform: scale(0.5);
      opacity: 0.8;
    }

    100% {
      transform: scale(1.5);
      opacity: 0;
    }
  }

  @keyframes loading-slide {
    0% {
      transform: translateX(-100%);
    }

    100% {
      transform: translateX(100%);
    }
  }
</style>

<script>
  // 監聽自定義事件來隱藏遮罩
  window.addEventListener('threejs-ready', () => {
    const overlay = document.getElementById('loading-overlay');
    if (overlay) {
      overlay.classList.add('fade-out');
    }
  });
</script>
